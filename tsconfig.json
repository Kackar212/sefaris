{
  "compilerOptions": {
    "allowJs": false,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sefaris/core": ["src/core/index.ts"],
      "@sefaris/shared": ["src/shared/index.ts"],
      "@sefaris/utilities": ["src/utilities/index.ts"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
